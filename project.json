{
  "name": "mybudget-au-technical-test",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "includedScripts": [],
  "projectType": "application",
  "prefix": "mbau",
  "sourceRoot": "./src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/mybudget-au-technical-test",
        "browser": "./src/main.ts",
        "polyfills": ["@angular/localize/init", "zone.js"],
        "tsConfig": "tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "public"
          }
        ],
        "stylePreprocessorOptions": {
          "sass": {
            "silenceDeprecations": ["import"]
          }
        },
        "styles": ["./src/styles.scss"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "dependsOn": ["serve-backend"],
      "options": {
        "proxyConfig": "./src/proxy.conf.json"
      },
      "configurations": {
        "production": {
          "buildTarget": "mybudget-au-technical-test:build:production"
        },
        "development": {
          "buildTarget": "mybudget-au-technical-test:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "serve-backend": {
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "command": "pnpm exec json-server projects/server/db.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "mybudget-au-technical-test:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["./src"]
      }
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/mybudget-au-technical-test"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "mybudget-au-technical-test:build",
        "port": 4200,
        "staticFilePath": "dist/mybudget-au-technical-test/browser",
        "spa": true
      }
    }
  }
}
