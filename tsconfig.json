{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": false,
    "target": "es2022",
    "module": "preserve",
    "lib": ["es2020", "dom"],
    "paths": {
      "@mbau/core": ["./src/app/core/index.ts"],
      "@mbau/dtos": ["./src/app/shared/dtos/index.ts"],
      "@mbau/toast-notifications": [
        "./src/app/shared/toast-notifications/index.ts"
      ],
      "@mbau/ui-kit": ["./src/app/ui-kit/index.ts"],
      "@mbau/validators": ["./src/app/shared/validators/index.ts"],
      "@mbau/layout": ["./src/app/layout/index.ts"],
      "@mbau/task-management-feature-task-details": [
        "./src/app/task-management/task-details/feature/index.ts"
      ],
      "@mbau/task-management-data-access": [
        "./src/app/task-management/shared/data-access/index.ts"
      ],
      "@mbau/task-management-state": [
        "./src/app/task-management/shared/state-management/index.ts"
      ],
      "@mbau/task-management-feature-task-listing": [
        "./src/app/task-management/task-list/feature/index.ts"
      ],
      "@mbau/task-management-shell-task-details": [
        "./src/app/task-management/task-details/shell/index.ts"
      ],
      "@mbau/task-management-shell-task-listing": [
        "./src/app/task-management/task-list/shell/index.ts"
      ]
    },
    "isolatedModules": true
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compileOnSave": false,
  "exclude": ["node_modules", "tmp"]
}
