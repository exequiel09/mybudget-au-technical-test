{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "header-max-length": [2, "always", 100],
    "subject-empty": [2, "never"],
    "scope-enum": [
      2,
      "always",
      [
        "npm",
        "mbau"
      ]
    ],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      [
        "fix",
        "feat",
        "perf",
        "docs",
        "refactor",
        "test",
        "chore",
        "revert",
        "build",
        "ci",
        "wip",
        "release",
        "style"
      ]
    ]
  }
}
